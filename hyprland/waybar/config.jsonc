{
  "layer": "top",
  "modules-left": ["custom/launcher", "hyprland/workspaces", "wlr/taskbar"],
  "modules-center": ["hyprland/window"],
  "modules-right": ["clock", "group/software", "group/hardware"], 
  "margin": "5 5 0 5",

  "group/hardware": {
    "orientation": "horizontal",
    "modules": ["custom/cpu", "custom/gpu", "backlight", "pulseaudio", "battery"]
  },

  "group/software": {
    "orientation": "horizontal",
    "modules": ["tray"]
  },

  "hyprland/window": {
    "separate-outputs": true
  },

  "pulseaudio": {
    "tooltip": false,
    "scroll-step": 5,
    "format": "{icon} {volume}%",
    "format-muted": "  {volume}%",
    "on-click":"pavucontrol",
    "format-icons": {
      "default": [" ", " ", " "]
    }
  },

  "custom/cpu": {
    "format": "\udb83\udee0  {}℃",
    "interval": 5,
    "exec": "bash ~/dotfiles/hyprland/waybar/scripts/cpu-temp.sh",
    "on-click": "kitty -e bash -c 'htop; read'"
  },

  "custom/gpu": {
    "format": "\udb82\udcae  {}℃",
    "interval": 5,
    "exec": "bash ~/dotfiles/hyprland/waybar/scripts/gpu-temp.sh",
    "on-click": "kitty -e bash -c 'nvtop; read'"
  },

  "backlight": {
    "tooltip": false,
    "format": " {}%",
    "interval":1,
    "on-scroll-up": "brightnessctl s +5",
    "on-scroll-down": "brightnessctl s 5-"
  },
  "battery": {
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 20
    },
    "format": "{icon} {capacity}%",
    "format-charging": "\udb80\udc84 {capacity}%",
    "format-plugged": "\udb81\udea5 {capacity}%",
    "format-alt": "{time} {icon}",
    "format-icons": ["\udb80\udc7a", "\udb80\udc7b", "\udb80\udc7c", "\udb80\udc7d", "\udb80\udc7e", "\udb80\udc7f", "\udb80\udc80", "\udb80\udc81", "\udb80\udc82", "\udb80\udc79"]
  },

  "clock": {
    "format": "{:%A,  %B  %d  %Y    %R}",
    "on-click": "firefox --new-window https://www.google.com/calendar"
  },

  "custom/launcher":{
    "format": " ",
    "on-click": "hyprctl dispatch exec '[floating] rofi -show drun -normal-window'"
  },

  "hyprland/workspaces": {
    "on-click": "activate",
    // "persistent-workspaces": {
    //   "*": 10
    // }
  },

  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 14,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "app_ids-mapping": {
      "firefoxdeveloperedition": "firefox-developer-edition"
    },
    "ignore-list": ["rofi"],
    "rewrite": {
      "Firefox Web Browser": "Firefox",
      "Foot Server": "Terminal"
    }
  },

  "tray": {
    "icon-size": 14,
    "spacing": 4
  }
}
